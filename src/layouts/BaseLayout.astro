---
import '../styles/global.css';

const {
  title = "Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch",
  description = "Sprachmittlung Deutsch ↔ Türkisch in Augsburg – Begleit- & Gesprächsdolmetschen für Alltag, Behörden und medizinische Gespräche.",
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="brand">
          <img
            src="/logo.png"
            alt="Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch"
            class="logo-image"
          />

          {/* Text direkt neben dem Logo */}
          <span class="brand-title">
            Zehra Yacine
            <span class="brand-subtitle">Sprachmittlung Deutsch ↔ Türkisch</span>
          </span>
        </a>

        <nav class="main-navigation" aria-label="Hauptnavigation">
          <ul>
            <li><a href="/">Start</a></li>
            <li><a href="/leistungen">Leistungen</a></li>
            <li><a href="/ueber-mich">Über mich</a></li>
            <li><a href="/kontakt">Kontakt</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <p>© {new Date().getFullYear()} Zehra Yacine · Sprachmittlung Deutsch ↔ Türkisch</p>
      </div>
    </footer>
  </body>
</html>