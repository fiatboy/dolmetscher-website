---
// src/layouts/BaseLayout.astro

// 1. Importiere die globalen Stile (Pfad prüfen!)
import '../styles/global.css';

// 2. Definiere die erwarteten Eigenschaften (Props) für das Layout
export interface Props {
  title: string; // Jede Seite sollte einen Titel übergeben
}

// 3. Hole den Titel aus den übergebenen Props
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {/* 4. Setze den Seitentitel dynamisch */}
    <title>{title}</title>

    {/* 5. Lade externe Schriftarten (Beispiel für Open Sans aus global.css) */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    {/* Hier könnten weitere Meta-Tags oder Links (z.B. für Favicon) stehen */}
</head>
<body>
    {/* 6. Hier wird der gesamte Inhalt der Seite (z.B. aus index.astro) eingefügt */}
    {/* Das schließt <Header />, <Hero />, <ServicesSection />, <Footer /> etc. mit ein */}
    <slot />

    {/* Hier sollte KEIN alter Header oder Footer mehr stehen! */}

    {/* Eventuell globale Javascript-Dateien könnten hier geladen werden */}
    {/* <script src="/scripts/main.js"></script> */}
</body>
</html>