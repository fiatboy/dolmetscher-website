---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = "Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch",
  description = "Sprachmittlung Deutsch ↔ Türkisch in Augsburg – Begleit- & Gesprächsdolmetschen für Alltag, Behörden und medizinische Gespräche.",
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>