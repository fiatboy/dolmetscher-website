---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = "Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch",
  description = "Sprachmittlung Deutsch ↔ Türkisch in Augsburg – Begleit- & Gesprächsdolmetschen für Alltag, Behörden und medizinische Gespräche.",
  bodyClass = "",
} = Astro.props;

// Klassen sauber zusammenbauen (leerzeichen-normalisiert)
const bodyClasses = [bodyClass].join(" ").replace(/\s+/g, " ").trim();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" href="/favicon-logo.png" type="image/png" />
    <link rel="shortcut icon" href="/favicon-logo.png" type="image/png" />
    <link rel="apple-touch-icon" href="/favicon-logo.png" />
  </head>

  <body class={bodyClasses}>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />

    <!-- NUR Startseite: Header oben transparent, beim Scroll wieder normal -->
    <script>
      (function () {
        const isHome = document.body.classList.contains("home-bg");
        if (!isHome) return;

        const header = document.querySelector(".site-header");
        if (!header) return;

        const setTopState = () => {
          if (window.scrollY <= 4) header.classList.add("is-top");
          else header.classList.remove("is-top");
        };

        setTopState();
        window.addEventListener("scroll", setTopState, { passive: true });
      })();
    </script>
  </body>
</html>