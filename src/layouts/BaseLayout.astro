---
import '../styles/global.css';
import Header from '../components/general/Header.astro';
import Footer from '../components/general/Footer.astro';

const {
  title = "Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch",
  description = "Sprachmittlung Deutsch ↔ Türkisch in Augsburg – Begleit- & Gesprächsdolmetschen für Alltag, Behörden und medizinische Gespräche.",
} = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- FAVICON: nur dein neues Icon -->
    <link rel="icon" href="/favicon-logo.png" type="image/png" />
    <link rel="shortcut icon" href="/favicon-logo.png" type="image/png" />
    <link rel="apple-touch-icon" href="/favicon-logo.png" />

    <!-- Optional: Canonical (wenn du es global willst, sonst pro Seite) -->
    <!-- <link rel="canonical" href={`https://zehra-yacine.de${Astro.url.pathname.endsWith('/') ? Astro.url.pathname : Astro.url.pathname + '/'}`} /> -->
  </head>

  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>