---
// src/components/ServiceCard.astro
export interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---
<div class="service-card">
  <div class="card-icon" aria-hidden="true">
    <slot name="icon" />
  </div>

  <h3 class="card-title">{title}</h3>
  <p class="card-text">{text}</p>
</div>

<style>
  .service-card {
    /* falls du hier schon Styles hast, kannst du das weglassen */
  }

  .card-icon {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: grid;
    place-items: center;
    margin: 0 auto 18px auto;

    /* Kreis-Hintergrund */
    background: rgba(0, 0, 0, 0.06);

    /* Icon-Farbe (passt zu deinem Orange/Gold im Screenshot) */
    color: #C58A2B;
  }

  /* Icon-Größe */
  .card-icon :global(svg) {
    width: 28px;
    height: 28px;
    display: block;
  }
</style>