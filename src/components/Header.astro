---
const nav = [
  { href: "/", label: "Start" },
  { href: "/leistungen", label: "Leistungen" },
  { href: "/ueber-mich", label: "Über mich" },
  { href: "/kontakt", label: "Kontakt" },
];
---

<header class="site-header">
  <div class="container">
    <div class="brand">
      <a class="logo-link" href="/" aria-label="Startseite">
        <img class="logo-image" src="/logo.png" alt="Zehra Yacine – Sprachmittlung" />
      </a>

      <!-- Text direkt neben dem Logo -->
      <span class="tagline">Zehra Yacine – Sprachmittlung Deutsch ↔ Türkisch</span>
    </div>

    <nav class="main-navigation" aria-label="Hauptnavigation">
      <ul>
        {nav.map((item) => (
          <li>
            <a href={item.href}>{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>