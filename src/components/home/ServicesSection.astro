---
// src/components/ServicesSection.astro
import ServiceCard from "./ServiceCard.astro";

const services = [
  {
    title: "Deutsch ↔ Türkisch Sprachmittlung",
    text: "Professionelle Sprachmittlung zwischen Deutsch und Türkisch – präzise, verständlich und kultursensibel in jeder Situation.",
    badge: "Beliebt",
    ctaLabel: "Termin anfragen",
    ctaHref: "#kontakt",
    icon: "globe",
  },
  {
    title: "Begleit- & Gesprächsdolmetschen",
    text: "Unterstützung bei Behördenterminen, Beratungen, persönlichen Gesprächen und Arztbesuchen – diskret und zuverlässig.",
    badge: "Schnell verfügbar",
    ctaLabel: "Kontakt aufnehmen",
    ctaHref: "#kontakt",
    icon: "chat",
  },
  {
    title: "Vertrauen, Genauigkeit & Empathie",
    text: "Klare Kommunikation ohne Missverständnisse – mit sprachlicher Genauigkeit, Neutralität und dem nötigen Fingerspitzengefühl.",
    badge: "Empfohlen",
    ctaLabel: "Mehr Details",
    ctaHref: "#leistungen",
    icon: "shield",
  },
];
---

<section class="services-section" id="leistungen">
  <div class="container">
    <header class="section-head">
      <p class="kicker">Leistungen</p>
      <h2 class="headline">Dolmetschen, das sicher ankommt.</h2>
      <p class="subline">
        Klar, empathisch und präzise – für Gespräche, Termine und Situationen, in denen jedes Wort zählt.
      </p>
    </header>

    <div class="services-grid">
      {services.map((s) => (
        <ServiceCard
          title={s.title}
          text={s.text}
          badge={s.badge}
          ctaLabel={s.ctaLabel}
          ctaHref={s.ctaHref}
        >
          {s.icon === "globe" && (
            <svg
              slot="icon"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
              focusable="false"
            >
              <path
                d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10Z"
                stroke="currentColor"
                stroke-width="2"
              />
              <path d="M2 12h20" stroke="currentColor" stroke-width="2" />
              <path
                d="M12 2c3 3 5 7 5 10s-2 7-5 10c-3-3-5-7-5-10s2-7 5-10Z"
                stroke="currentColor"
                stroke-width="2"
              />
            </svg>
          )}

          {s.icon === "chat" && (
            <svg
              slot="icon"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
              focusable="false"
            >
              <path
                d="M21 12c0 4.418-4.03 8-9 8a10.9 10.9 0 0 1-3.6-.6L3 21l1.2-4A7.3 7.3 0 0 1 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8Z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linejoin="round"
              />
              <path
                d="M7.5 12h9"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
              />
              <path
                d="M7.5 9h6"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
              />
            </svg>
          )}

          {s.icon === "shield" && (
            <svg
              slot="icon"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-hidden="true"
              focusable="false"
            >
              <path
                d="M12 2 4 5v6c0 5 3.4 9.4 8 11 4.6-1.6 8-6 8-11V5l-8-3Z"
                stroke="currentColor"
                stroke-width="2"
                stroke-linejoin="round"
              />
              <path
                d="m8.5 12.5 2.2 2.2 4.8-5.2"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          )}
        </ServiceCard>
      ))}
    </div>
  </div>
</section>

<style>
  .services-section {
    padding: 76px 0;
  }

  .container {
    width: min(1120px, 92vw);
    margin: 0 auto;
  }

  .section-head {
    max-width: 760px;
    margin: 0 auto 30px;
    text-align: center;
  }

  .kicker {
    margin: 0 0 10px;
    font-size: 12px;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: rgba(15, 23, 42, 0.62);
  }

  .headline {
    margin: 0 0 12px;
    font-size: clamp(26px, 3.2vw, 38px);
    letter-spacing: -0.02em;
    color: rgba(15, 23, 42, 0.92);
  }

  .subline {
    margin: 0;
    font-size: 16px;
    line-height: 1.7;
    color: rgba(15, 23, 42, 0.68);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 18px;
    margin-top: 26px;
    align-items: stretch;
  }

  .services-grid :global(.service-card) {
    grid-column: span 12;
  }

  @media (min-width: 820px) {
    .services-grid {
      gap: 20px;
    }

    .services-grid :global(.service-card) {
      grid-column: span 4;
    }
  }
</style>