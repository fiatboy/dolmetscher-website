---
// src/components/ServicesSectionTR.astro
// Türkische Variante der Service-Kacheln.
// WICHTIG: Icons sind 1:1 identisch zur deutschen ServicesSection (gleiche SVGs via slot="icon").
// Nur die Texte (title/text) sind türkisch.

import ServiceCard from '../ServiceCard.astro';

const services = [
  {
    title: "Almanca ↔ Türkçe Dil Aracılığı",
    text: "Almanca ve Türkçe arasında profesyonel dil aracılığı – her durumda anlaşılır, doğru ve kültüre duyarlı iletişim."
  },
  {
    title: "Refakat & Görüşme Tercümanlığı",
    text: "Kurum randevuları, doktor görüşmeleri, danışmanlıklar ve önemli konuşmalarda – gizli ve güvenilir destek."
  },
  {
    title: "Güven, Dikkat & Empati",
    text: "Yanlış anlaşılmalar olmadan net iletişim – doğruluk, tarafsızlık ve gerekli hassasiyetle."
  }
];
---

<section class="services-section">
  <div class="container">
    <div class="services-grid">
      {/* 1) Sprachmittlung / Dil aracılığı */}
      <ServiceCard title={services[0].title} text={services[0].text}>
        <svg
          slot="icon"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10Z" stroke="currentColor" stroke-width="2"/>
          <path d="M2 12h20" stroke="currentColor" stroke-width="2"/>
          <path d="M12 2c3 3 5 7 5 10s-2 7-5 10c-3-3-5-7-5-10s2-7 5-10Z" stroke="currentColor" stroke-width="2"/>
        </svg>
      </ServiceCard>

      {/* 2) Gespräche begleiten / Refakat */}
      <ServiceCard title={services[1].title} text={services[1].text}>
        <svg
          slot="icon"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path d="M21 12c0 4.418-4.03 8-9 8a10.9 10.9 0 0 1-3.6-.6L3 21l1.2-4A7.3 7.3 0 0 1 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <path d="M7.5 12h9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M7.5 9h6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </ServiceCard>

      {/* 3) Vertrauen & Genauigkeit / Güven */}
      <ServiceCard title={services[2].title} text={services[2].text}>
        <svg
          slot="icon"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
        >
          <path d="M12 2 4 5v6c0 5 3.4 9.4 8 11 4.6-1.6 8-6 8-11V5l-8-3Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <path d="m8.5 12.5 2.2 2.2 4.8-5.2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </ServiceCard>
    </div>
  </div>
</section>